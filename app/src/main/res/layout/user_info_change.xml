<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/Twitter_imageButton"
        android:layout_width="33dp"
        android:layout_height="35dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/twitter"
        app:layout_constraintEnd_toStartOf="@+id/Cooperation_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Cooperation_button"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:text="Twitterと連携"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Icon_imageView"
        android:layout_width="108dp"
        android:layout_height="94dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Icon_imageView" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_textView" />

    <EditText
        android:id="@+id/Current_Password"
        android:layout_width="318dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="現在のパスワードを入力してください"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/New_Password"
        android:layout_width="228dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:hint="新規パスワードを入力"
        android:inputType="numberPassword"
        android:maxLength="128"
        app:layout_constraintEnd_toStartOf="@+id/Change_button1"
        app:layout_constraintTop_toBottomOf="@+id/Current_Password" />

    <Button
        android:id="@+id/Change_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="変更"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Current_Password" />

    <Button
        android:id="@+id/Change_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="変更"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Change_button1" />

    <EditText
        android:id="@+id/New_EmailAddress"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="メールアドレス変更"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        app:layout_constraintEnd_toStartOf="@+id/Change_button2"
        app:layout_constraintTop_toBottomOf="@+id/New_Password" />

    <Button
        android:id="@+id/Current_button"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:text="退会"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/New_EmailAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>