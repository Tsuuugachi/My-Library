<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="252dp"
        android:text="|"
        app:layout_constraintStart_toEndOf="@+id/Book_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/book_Button"
        android:layout_width="61dp"
        android:layout_height="114dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/book_Button2"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sort_spinner2"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="36dp"
        android:entries="@array/planets_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/book_Button3"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Book_textView"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/book_Button3"
        app:layout_constraintTop_toBottomOf="@+id/book_Button2" />

    <TextView
        android:id="@+id/Date_textView"
        android:layout_width="79dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/book_Button2" />
</androidx.constraintlayout.widget.ConstraintLayout>