<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <Button
        android:id="@+id/Login_button"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/button_customize"
        android:radius="6dp"
        android:text="@string/login"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Sign_up_button"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/signup_background"
        android:text="@string/new_account"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_button" />

    <TextView
        android:id="@+id/mail_View"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:text="ユーザーネーム"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eTPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="128"
        app:layout_constraintStart_toEndOf="@+id/Password_View"
        app:layout_constraintTop_toBottomOf="@+id/User_nameTextPersonName" />

    <TextView
        android:id="@+id/Login_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ログイン"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Password_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="パスワード"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_View" />

    <CheckBox
        android:id="@+id/Auto_check_Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="自動ログインを有効にする"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTPassword" />

    <EditText
        android:id="@+id/User_nameTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="User name"
        android:inputType="textPersonName"
        android:maxLength="20"
        app:layout_constraintStart_toEndOf="@+id/mail_View"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#E13A3A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_View" />


</androidx.constraintlayout.widget.ConstraintLayout>