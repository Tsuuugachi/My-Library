<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/CansellimageButton"
        android:layout_width="48dp"
        android:layout_height="61dp"
        android:background="@drawable/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/CheckimageButton"
        android:layout_width="66dp"
        android:layout_height="69dp"
        android:background="@drawable/check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/DeleteimageButton"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/cancelbutton"
        app:layout_constraintBottom_toTopOf="@+id/BookimageButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/Book_shelfimageButton"
        android:layout_width="96dp"
        android:layout_height="79dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/book_shelf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView2" />

    <ImageButton
        android:id="@+id/BookimageButton"
        android:layout_width="85dp"
        android:layout_height="67dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SearchView
        android:id="@+id/searchView2"
        android:layout_width="228dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="@+id/CansellimageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:text="本棚"
        app:layout_constraintStart_toEndOf="@+id/Book_shelfimageButton"
        app:layout_constraintTop_toBottomOf="@+id/searchView2" />

    <TextView
        android:id="@+id/signature_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookimageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>