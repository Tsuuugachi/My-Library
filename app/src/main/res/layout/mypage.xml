<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Crack_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/change_layout"
            android:text="変更" />

        <ImageView
            android:id="@+id/icon_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/Name_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="@string/user_name" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/Follower_button"
                    android:layout_width="103dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/clear"
                    android:text="フォロワー" />

                <Button
                    android:id="@+id/Follow_button"
                    android:layout_width="96dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/clear"
                    android:text="フォロー" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Favorite_button"
                android:layout_width="146dp"
                android:layout_height="84dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/mypage_button_background"
                android:text="お気に入りの本" />

            <Button
                android:id="@+id/Good_button"
                android:layout_width="146dp"
                android:layout_height="84dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mypage_button_background"
                android:text="お気に入りのリードリスト" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/readlist_imageButton"
                android:layout_width="149dp"
                android:layout_height="84dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/readlist" />

            <ImageButton
                android:id="@+id/bookshelf_imageButton"
                android:layout_width="149dp"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bookshelf" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>