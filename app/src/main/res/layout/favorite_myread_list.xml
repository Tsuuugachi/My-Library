<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/sort_spinner"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:entries="@array/planets_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/onebutton"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topbutton" />

    <ImageButton
        android:id="@+id/Book_imageButton"
        android:layout_width="94dp"
        android:layout_height="138dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/topbutton"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:text="＜＜"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lastbutton"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:layout_marginStart="33dp"
        android:text="＞＞"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/onebutton" />

    <Button
        android:id="@+id/List_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginTop="216dp"
        android:text="一覧を見る"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Readlist_nametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/Sort_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="並び替え"
        app:layout_constraintEnd_toStartOf="@+id/sort_spinner"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>