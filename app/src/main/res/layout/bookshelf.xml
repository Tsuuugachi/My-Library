<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 1行目 -->
    <TableRow
        android:layout_width="100dp"
        android:layout_height="71dp">


        <TextView
            android:id="@+id/sort_textView"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:text="並び替え" />

        <Spinner
            android:id="@+id/sort_spinner"
            android:layout_width="97dp"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:entries="@array/planets_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/garbage_imageButton"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:background="@drawable/garbage_can" />

    </TableRow>
    <!-- 2行目 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:id="@+id/Search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:width="2dp"
            android:color="#34465d" />


        <Button
            android:id="@+id/button_31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button31"/>

        <Button
            android:id="@+id/button_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button32" />
        <Button
            android:id="@+id/button_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button33"/>
    </TableRow>
    <!-- 3行目 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/book_imageButton"
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:background="@drawable/book" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/add_imageButton"
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:background="@drawable/add" />

        <TextView
            android:id="@+id/author_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch" />
    </TableRow>
</TableLayout>