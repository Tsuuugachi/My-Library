<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/save_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="27dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageButton
        android:id="@+id/return_button2"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ScrollView
        android:layout_width="357dp"
        android:layout_height="488dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="358dp"
            android:layout_height="560dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".MainActivity">


            <!-- 1行目 -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:text="user_name"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/user_image"
                    app:layout_constraintTop_toTopOf="@+id/user_image" />

                <Button
                    android:id="@+id/follow_button"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_rounded_corners"
                    android:text="フォロー"
                    android:textColor="@color/color_selector"
                    app:layout_constraintStart_toEndOf="@+id/user_name"
                    app:layout_constraintTop_toTopOf="@+id/user_name" />

            </TableRow>

            <!-- 2行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="21dp">

                <TextView
                    android:id="@+id/last_login1"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="最終ログイン:"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/user_image"
                    app:layout_constraintTop_toBottomOf="@+id/user_name" />

                <TextView
                    android:id="@+id/login_day1"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="2020/11/04"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/last_login1"
                    app:layout_constraintTop_toBottomOf="@+id/user_name" />


            </TableRow>

            <!-- 3行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="69dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:text="user_name"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/user_image"
                    app:layout_constraintTop_toTopOf="@+id/user_image" />

                <Button
                    android:id="@+id/follow_button"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_rounded_corners"
                    android:text="フォロー"
                    android:textColor="@color/color_selector"
                    app:layout_constraintStart_toEndOf="@+id/user_name"
                    app:layout_constraintTop_toTopOf="@+id/user_name" />

            </TableRow>

            <!-- 4行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/last_login"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="最終ログイン:"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/user_image"
                    app:layout_constraintTop_toBottomOf="@+id/user_name" />

                <TextView
                    android:id="@+id/login_day"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:text="2020/11/04"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/last_login1"
                    app:layout_constraintTop_toBottomOf="@+id/user_name" />
            </TableRow>

        </TableLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>